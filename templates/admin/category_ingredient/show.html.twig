{% extends 'base_admin.html.twig' %}


{% block title %}Catégorie d'ingrédient : {{category_ingredient.name}}{% endblock %}

{% block body %}


    <h1>Catégorie d'ingrédient : {{category_ingredient.name}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Image</th>
                <th>Nom</th>
            </tr>
            <tr>
                <td>
                    <img alt="photo_de_{{category_ingredient.name}}" class="img-thumbnail" width="150" src="{{ asset('category/ingredients/'~category_ingredient.picture)  }}"/>
                </td>
                <td>{{ category_ingredient.name }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex flex-row">
        <a class="btn btn-primary" href="{{ path('app_category_ingredient_edit', {'id': category_ingredient.id}) }}"><i class="fa-solid fa-pencil"></i> Modifier</a>
        {{ include('admin/category_ingredient/_delete_form.html.twig') }}
    </div>
{% endblock %}
