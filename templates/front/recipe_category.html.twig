{% extends 'base.html.twig' %}

{% block title %}Recette de {{category.name}} {% endblock %}

{% block body %}
    <div class="container my-4" >
        <h1 class="my-3" >Recette de {{category.name}}</h1>
        {% for recipe in recipes %}
            <div class="card w-25">
                <a href="{{path('app_recipe_show',{id: recipe.id})}}">
                    <img height="300" style="object-fit: cover" class="border rounded w-100" alt="{{recipe.title}}" src="{{ vich_uploader_asset(recipe, 'imageFile') }}">
                    <div class="p-2" >
                        <h3>{{recipe.title}}</h3>
                    </div>
                </a>
            </div>
        {% endfor %}
        {{ knp_pagination_render(recipes) }}
    </div>

{% endblock %}

{% block javascripts%}
    {{parent()}}
{% endblock%}