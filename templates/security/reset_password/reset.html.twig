{% extends 'base.html.twig' %}

{% block title %}Réinitialiser/Modifier votre mot de passe{% endblock %}

{% block body %}
<div class="bg_login d-flex flex-column flex-fill justify-content-center align-items-center">
    <div class="card w-50">
        <div class="card-header"><h1 class="h3 font-weight-normal">Réinitialiser/Modifier votre mot de passe</h1></div>
        <div class="card-body">
            {{ form_start(resetForm) }}
            {{ form_row(resetForm.plainPassword) }}
            <button class="btn btn-primary">Changer votre mot de passe</button>
            {{ form_end(resetForm) }}
        </div>
    </div>
</div>
{% endblock %}
